%section#body_content
  .login_form
    -#- if flash[:alert]
    -#  %p#notice= flash[:alert]
    = form_tag do
      %fieldset
        %legend.fs_legend Please Log In
        .field.session_username.clearfix
          = label_tag :group_name, 'Name:'
          = text_field_tag :group_name, params[:group_name], :class => 'larger widest', :id => 'ifgroup_login', :size => 30
        .field.session_password.clearfix
          = label_tag :password, 'Password:'
          = password_field_tag :password, params[:password], :class => 'larger widest', :id => 'ifgroup_password', :size => 30
        %div
          = submit_tag "Login"