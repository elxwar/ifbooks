<% content_for :body_content_title do %>
  <%= @subscription.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Book</h1>
    <p>
      <%=raw @subscription.book_id %>
    </p>
  </section>
  <section>
    <h1>Ifgroup</h1>
    <p>
      <%=raw @subscription.ifgroup_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="subscriptions">
      <% @subscriptions.each do |subscription| %>
        <li>
          <%= link_to subscription.title, refinery.subscriptions_subscription_path(subscription) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
