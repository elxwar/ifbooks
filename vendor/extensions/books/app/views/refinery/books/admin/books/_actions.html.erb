<ul>
  <% if ::Refinery::Books::Admin::BooksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.books_admin_books_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_books_admin_book_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Books::Admin::BooksController.sortable? && ::Refinery::Books::Book.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Books"),
                 refinery.books_admin_books_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Books"),
                 refinery.books_admin_books_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
