<%= form_for [refinery, :books_admin, @book] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @book,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/books/book", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description_for_schools].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/books/book", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description_for_schools].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description_for_groups].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/books/book", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description_for_groups].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class='field'>
    <%= f.label :video_url -%>
    <%= f.text_field :video_url  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @book.photo,
               :toggle_image_display => false %>

  </div>

  <div class='field'>
    <%= f.label :margin_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :margin_image_id,
               :image => @book.margin_image,
               :toggle_image_display => false %>

  </div>
  <br/>
  <br/>
  <h2>Add files relating to the book below</h2>
  <p>Please note if you save the page and then return to this editor you will then see the names of the files....</p>

  <div class='field'>
    <%= f.label :file1 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file1_id,
               :resource => @book.file1 %>
  </div>

  <div class='field'>
    <%= f.label :file2 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file2_id,
               :resource => @book.file2 %>
  </div>

  <div class='field'>
    <%= f.label :file3 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file3_id,
               :resource => @book.file3 %>
  </div>

  <div class='field'>
    <%= f.label :file4 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file4_id,
               :resource => @book.file4 %>
  </div>

  <div class='field'>
    <%= f.label :file5 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file5_id,
               :resource => @book.file5 %>
  </div>

  <div class='field'>
    <%= f.label :file6 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file6_id,
               :resource => @book.file6 %>
  </div>

  <div class='field'>
    <%= f.label :file7 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file7_id,
               :resource => @book.file7 %>
  </div>

  <div class='field'>
    <%= f.label :file8 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file8_id,
               :resource => @book.file8 %>
  </div>

  <div class='field'>
    <%= f.label :file9 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file9_id,
               :resource => @book.file9 %>
  </div>

  <div class='field'>
    <%= f.label :file10 -%>
    <%= render "/refinery/admin/resource_picker",
               :f => f,
               :field => :file10_id,
               :resource => @book.file10 %>
  </div>

  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.books.admin.books.book'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @book.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>